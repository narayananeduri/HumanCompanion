<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/pageBackground"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="0.5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:gravity="left"
        tools:ignore="RtlHardcoded">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/img_PM"
        android:background="#ecf0f5"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="top|center"
        android:layout_margin="1dp"
        android:layout_marginLeft="10dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/RatingText"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_gravity="left"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center"/>

                <RatingBar
                    android:id="@+id/ratingBar_PM"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_gravity="center|end"
                    android:layout_marginLeft="50dp"
                    android:numStars="5" />
            </TableRow>
            <TableRow>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Name : "
                    android:layout_gravity="left"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text=""
                    android:layout_gravity="left"
                    android:id="@+id/name_PM"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center"/>
            </TableRow>
            <TableRow>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Phone : "
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:gravity="center"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text=""
                    android:layout_gravity="left"
                    android:id="@+id/phone_PM"
                    android:textSize="12sp"
                    android:textColor="#5f6163"
                    android:gravity="center"/>

            </TableRow>
            <TableRow>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Location : "
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="left"
                    android:id="@+id/location_PM"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#5f6163"
                    android:gravity="center"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text=""
            android:id="@+id/Id_PM"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
        android:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>