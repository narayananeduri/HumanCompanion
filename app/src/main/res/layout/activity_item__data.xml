<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.CardView android:id="@+id/card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/pageBackground"
            android:layout_gravity="center"
            android:visibility="gone"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="0.5dp"
            card_view:cardUseCompatPadding="true"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal"
                    android:scrollbarStyle="insideOverlay">
                    <LinearLayout
                        android:id="@+id/ImageLinearLayOut"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                </ScrollView>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal"
                    android:scrollbarStyle="insideOverlay">
                    <LinearLayout
                        android:id="@+id/ImageLinearLayOut1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                </ScrollView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
       <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="top|center"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/SelectedImages1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_height="150dp"
                    />
                <ImageView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/SelectedImages2"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_height="150dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="top|center"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/SelectedImages3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:layout_height="150dp" />
                <ImageView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/SelectedImages4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:layout_height="150dp" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView android:id="@+id/card_view2"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="0.5dp"
            card_view:cardUseCompatPadding="true"
            xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Pet Details"
            android:background="@color/pageBackground"
            android:textColor="#1a2226"
            android:textSize="20sp"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/card_view1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/pageBackground"
            card_view:cardCornerRadius="1dp"
            android:layout_margin="10dp"
            card_view:cardElevation="0.5dp"
            card_view:cardUseCompatPadding="true"
            xmlns:android="http://schemas.android.com/apk/res/android">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="50dp">
                    <TableRow
                        android:padding="2dp"

                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:text="@string/type_nameItem"
                            android:textSize="20sp"

                            android:paddingLeft="30dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:textSize="20sp"
                            android:paddingLeft="50dp"
                            android:id="@+id/type_Item_Data"/>
                    </TableRow>
                    <TableRow
                        android:padding="2dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:text="@string/breedItem"
                            android:textSize="20sp"
                            android:paddingLeft="30dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:textSize="20sp"
                            android:paddingLeft="50dp"
                            android:id="@+id/breed_Item_Data"/>
                    </TableRow>
                    <TableRow
                        android:padding="2dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:text="@string/pet_ageItem"
                            android:textSize="20sp"
                            android:paddingLeft="30dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:textSize="20sp"
                            android:paddingLeft="50dp"
                            android:id="@+id/age_Item_Data"/>
                    </TableRow>
                    <TableRow
                        android:padding="2dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:text="@string/genderItem"
                            android:textSize="20sp"
                            android:paddingLeft="30dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:textSize="20sp"
                            android:paddingLeft="50dp"
                            android:id="@+id/gender_Item_Data"/>
                    </TableRow>
                    <TableRow
                        android:padding="2dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:text="@string/descriptionItem"
                            android:textSize="20sp"
                            android:paddingLeft="30dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:paddingLeft="50dp"
                            android:id="@+id/description_Item_Data"/>
                    </TableRow>
                    <TableRow
                        android:padding="2dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:text="@string/adopteItem"
                            android:textSize="20sp"
                            android:paddingLeft="30dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:textSize="20sp"
                            android:paddingLeft="50dp"
                            android:id="@+id/adopte_Item_Data"/>
                    </TableRow>
                    <TableRow
                        android:padding="2dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:text="@string/amountItem"
                            android:textSize="20sp"
                            android:paddingLeft="30dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:textSize="20sp"
                            android:paddingLeft="50dp"
                            android:id="@+id/amount_Item_Data"/>
                    </TableRow>
                    <TableRow
                        android:padding="2dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:text="@string/locationItem"
                            android:textSize="20sp"
                            android:paddingLeft="30dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:textSize="20sp"
                            android:paddingLeft="50dp"
                            android:id="@+id/location_Item_Data"/>
                    </TableRow>
                </TableLayout>
        </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->

        <Button
            android:id="@+id/makeCall"
            style="@style/buttons"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Call" />
        <Button
            android:layout_width="0dp"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="chat"
            android:visibility="gone"
            android:textColor="@color/TabSelectedText"
            android:id="@+id/makeChat"
            android:layout_marginEnd="10dp" />
    <!--</LinearLayout>-->
</LinearLayout>