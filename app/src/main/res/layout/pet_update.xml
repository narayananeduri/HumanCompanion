<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/pageBackground"
        card_view:cardCornerRadius="1dp"
        android:layout_gravity="center"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="#ecf0f5"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/rl"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/pageBackground"
                    card_view:cardCornerRadius="1dp"
                    android:layout_gravity="center"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="0dp">
                    <EditText
                        style="@style/EditText"
                        android:inputType="textPersonName"
                        android:hint="@string/type_Adv_Pet"
                        android:id="@+id/type_UP"/>
                </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/pageBackground"
                    card_view:cardCornerRadius="1dp"
                    android:layout_gravity="center"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">
                    <EditText
                        style="@style/EditText"
                        android:inputType="textPersonName"
                        android:hint="@string/breed_Adv_Pet"
                        android:id="@+id/breed_UP"/>
                </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/pageBackground"
                    card_view:cardCornerRadius="1dp"
                    android:layout_gravity="center"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:id="@+id/TIL">
                    <EditText
                        style="@style/EditText"
                        android:inputType="number"
                        android:hint="@string/age_Adv_Pet"
                        android:id="@+id/age_UP"/>

                </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/pageBackground"
                    card_view:cardCornerRadius="1dp"
                    android:layout_gravity="center"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="50dp"
                    android:id="@+id/genderSpinner_UP"
                    style="@style/Widget.AppCompat.Spinner.Underlined"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/pageBackground"
                    card_view:cardCornerRadius="1dp"
                    android:layout_gravity="center"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/location_UP"
                        style="@style/EditText"
                        android:hint="@string/promotions_Location"
                        android:inputType="text"
                        android:textColor="#000"
                        />
                </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/pageBackground"
                    card_view:cardCornerRadius="1dp"
                    android:layout_gravity="center"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp">
                    <EditText
                        style="@style/EditText"
                        android:hint="@string/description_Adv_Pet"
                        android:inputType="textPersonName"
                        android:id="@+id/description_UP"/>
                </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
                <Button
                    style="@style/buttons"
                    android:text="Update"
                    android:id="@+id/Post_UP"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>