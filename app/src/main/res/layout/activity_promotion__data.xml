<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <android.support.v7.widget.CardView android:id="@+id/card_view"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/pageBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="0.5dp"
                card_view:cardUseCompatPadding="true"
                xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:id="@+id/promotionDataImage_PSA"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/pageBackground"
                android:scaleType="fitXY"
                android:contentDescription = "Image" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:id="@+id/card_view1"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/pageBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="0.5dp"
                card_view:cardUseCompatPadding="true"
                xmlns:android="http://schemas.android.com/apk/res/android">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:text="Promotion Details"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/TabSelectedText"
                android:paddingLeft="15dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:id="@+id/card_view2"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/pageBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="0.5dp"
                card_view:cardUseCompatPadding="true"
                xmlns:android="http://schemas.android.com/apk/res/android">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginLeft="50dp">
                <TableRow
                    android:padding="2dp"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="150dp"
                        android:text="Shop Name"
                        android:textSize="20sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:textSize="20sp"
                        android:id="@+id/shopName_PSA"/>
                </TableRow>
                <TableRow
                    android:padding="2dp"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="150dp"
                        android:text="Phone"
                        android:textSize="20sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:textSize="20sp"
                        android:id="@+id/phone_PSA"/>
                </TableRow>
                <TableRow
                    android:padding="2dp"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="150dp"
                        android:text="Location"
                        android:textSize="20sp"
                        android:paddingLeft="15dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:textSize="20sp"
                        android:id="@+id/location_PSA"/>
                </TableRow>
                <TableRow
                    android:padding="2dp"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="150dp"
                        android:text="Rating"
                        android:textSize="20sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:id="@+id/rating_PSA"/>
                    <RatingBar
                        android:id="@+id/ratingBar_PSA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars = "5"
                        style="?android:attr/ratingBarStyleIndicator"
                        />
                </TableRow>

            </TableLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/pageBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="0.5dp"
                card_view:cardUseCompatPadding="true"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/TabSelectedText"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    xmlns:android="http://schemas.android.com/apk/res/android">

                    <TextView
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:text="Services"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:background="@color/TabSelectedText"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/ViewAllServices"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:layout_height="38dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/TabSelectedText"
                        android:layout_margin="10dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"

                        android:text="View All" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/pageBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="0.5dp"
                card_view:cardUseCompatPadding="true"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="10dp"
                    android:id="@+id/serviceList"
                    tools:ignore="NestedScrolling" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <Button
        style="@style/buttons"
        android:layout_gravity="center|bottom"
        android:layout_weight="0"
        android:text="Call"
        android:id="@+id/makeCall_promotion"
        />
</LinearLayout>





