<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:gravity="top|center">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainData"
        android:gravity="top|center"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="top|center"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <android.support.v7.widget.CardView android:id="@+id/card_view"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/pageBackground"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="0.5dp"
                        card_view:cardUseCompatPadding="true"
                        xmlns:android="http://schemas.android.com/apk/res/android">
                        <ImageView
                            android:id="@+id/promotionDataImage_MPSA"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_margin="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/pageBackground"
                            android:scaleType="fitXY"
                            android:contentDescription = "Image" />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView android:id="@+id/card_view1"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/pageBackground"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="0.5dp"
                        card_view:cardUseCompatPadding="true"
                        xmlns:android="http://schemas.android.com/apk/res/android">
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/TabSelectedText"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            xmlns:android="http://schemas.android.com/apk/res/android">

                        <TextView
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="10dp"
                            android:text="Promotion Details"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:background="@color/TabSelectedText"
                            android:gravity="center"/>

                            <Button
                                android:id="@+id/Edit_Promotions"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_gravity="center|end"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edit"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center|end" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView android:id="@+id/card_view2"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/pageBackground"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="0.5dp"
                        card_view:cardUseCompatPadding="true"
                        xmlns:android="http://schemas.android.com/apk/res/android">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="#ffffff"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginStart="50dp">
                            <TableRow
                                android:padding="2dp">
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="150dp"
                                    android:text="Shop Name"
                                    android:textSize="20sp"
                                    android:paddingLeft="15dp"/>
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="0"
                                    android:textSize="20sp"
                                    android:id="@+id/shopName_MPSA"/>
                            </TableRow>
                            <TableRow
                                android:padding="2dp"
                                tools:ignore="UselessParent">
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="150dp"
                                    android:text="Phone"
                                    android:textSize="20sp"
                                    android:paddingLeft="15dp"/>
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="0"
                                    android:textSize="20sp"
                                    android:id="@+id/phone_MPSA"/>
                            </TableRow>
                            <TableRow
                                android:padding="2dp"
                                tools:ignore="UselessParent">
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="150dp"
                                    android:text="Location"
                                    android:textSize="20sp"
                                    android:paddingLeft="15dp"
                                    />
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="0"
                                    android:textSize="20sp"
                                    android:id="@+id/location_MPSA"/>

                            </TableRow>
                            <TableRow
                                android:padding="2dp"
                                tools:ignore="UselessParent">
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="150dp"
                                    android:text="Rating"
                                    android:textSize="20sp"
                                    android:paddingLeft="15dp"/>
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="0"
                                    android:textSize="20sp"
                                    android:visibility="gone"
                                    android:id="@+id/rating_MPSA"/>
                                <RatingBar
                                    android:id="@+id/ratingBar_MPSA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars = "5"
                                    style="?android:attr/ratingBarStyleIndicator"
                                    />
                            </TableRow>

                        </TableLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/pageBackground"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="0.5dp"
                        android:layout_gravity="end"
                        card_view:cardUseCompatPadding="true"
                        xmlns:android="http://schemas.android.com/apk/res/android">



                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/pageBackground"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="0.5dp"
                    card_view:cardUseCompatPadding="true"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/TabSelectedText"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        xmlns:android="http://schemas.android.com/apk/res/android">

                    <TextView
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:text="Services"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:background="@color/TabSelectedText"
                        android:gravity="center"/>
                        <Button
                            android:id="@+id/ViewAllServices"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:layout_gravity="center|end"
                            android:textColor="@color/TabSelectedText"
                            android:layout_margin="10dp"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="View All" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="end"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/add"
                            android:backgroundTint="@color/colorPrimary"
                            android:id="@+id/Service_Add"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:headerDividersEnabled="false"
                    android:layout_margin="10dp"
                    android:id="@+id/serviceList_MPSA"
                    />

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/pageBackground"
                    card_view:cardCornerRadius="1dp"
                    android:layout_gravity="end"
                    card_view:cardElevation="0.5dp"
                    card_view:cardUseCompatPadding="true"
                    xmlns:android="http://schemas.android.com/apk/res/android">


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
          <Button
                style="@style/buttons"
                android:text="Delete Promotion"
                android:textColor="@color/TabSelectedText"
                android:padding="10dp"
                android:id="@+id/deletePromotion"
                android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/disablePart"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="There is no promotion For You please enter new promotion"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Button
            style="@style/buttons"
            android:layout_gravity="center|bottom"
            android:layout_weight="0"
            android:text="Add New Promotion"
            android:id="@+id/inset_Promotion_btn"
            />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>