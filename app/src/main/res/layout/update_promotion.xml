<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/Name_Input">
        <EditText android:id="@+id/input_name_UP"
            style="@style/EditText"
            android:inputType="textPersonName"
            android:hint="@string/promotions_ShopName"
            android:textColor="@color/TextBoxColor"
            />
    </android.support.design.widget.TextInputLayout>

    <!--  Email Label -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/Email_Id_Input">
        <EditText android:id="@+id/input_mobile_UP"
            style="@style/EditText"
            android:inputType="number"
            android:maxLength="10"
            android:hint="@string/promotions_Phone"
            />
    </android.support.design.widget.TextInputLayout>


    <!-- mobile number -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/Mobile_Input">
        <EditText android:id="@+id/input_location_UP"
            android:inputType="textPersonName"
            android:hint="@string/promotions_Location"
            style="@style/EditText"
            android:layout_marginBottom="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="20dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_update_Promotion"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:textColor="#ffffff"
            android:background="@drawable/shape"
            android:text="@string/update_acount_profile"
            android:layout_gravity="center"
            android:ems="15"/>
        <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_Cancel_Update_Promotion"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/shape"
        android:layout_marginLeft="10dp"
        android:padding="12dp"
        android:text="@string/cancel_Profile"
        android:layout_gravity="center"
        android:ems="15"/>
    </LinearLayout>
</LinearLayout>